<%- include('../partials/header.ejs'); %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="name">Survey Title</label>
                <input type="text" class="form-control" id="name"
                placeholder="Title" name="name" value="<%= surveys.name %>" required>
              </div>
              <br>

              <% for(let count = 0; count < surveys.questions.length; count++) { %>
                <div class="form-group">
                    <label> Question <%= count + 1%> </label>
                    <input type="text" class="form-control" placeholder= "Question <%= count + 1%>" id ="question<%= count + 1%>" name="question<%= count + 1%>" value="<%= surveys.questions[count].title %>"
                    required>
                <br>
                <label for="optionType">Selection Type:</label>
                <label for="optionType">Radio</label>
                <input type="radio" class="form-check-input" placeholder= "" id ="optionType<%= count + 1%>" name="optionType<%= count + 1%>" value="Radio" <%= surveys.questions[count].optionType === 'Radio' ? 'checked' : '' %>>
                <label for="optionType">Checkbox</label>
                <input type="radio" class="form-check-input" placeholder= "" id ="optionType<%= count + 1%>" name="optionType<%= count + 1%>" value="Checkbox" <%= surveys.questions[count].optionType === 'Checkbox' ? 'checked' : '' %> required>
                <br><br>
                <label for="optionType">Options 1</label>
                <input type="text" class="form-control" placeholder= "" id ="options<%= count*4 +1%>" name="options<%= count*4 +1%>" value="<%= surveys.questions[count].options[0].details %>" required>
                <br>
                <label for="optionType">Options 2</label>
                <input type="text" class="form-control" placeholder= "" id ="options<%= count*4 +2%>" name="options<%= count*4 +2%>" value="<%= surveys.questions[count].options[1].details %>" required>
                <br>
                <label for="optionType">Options 3</label>
                <input type="text" class="form-control" placeholder= "" id ="options<%= count*4 +3%>" name="options<%= count*4 +3%>" value="<%= surveys.questions[count].options[2].details %>" required>
                <br>
                <label for="optionType">Options 4</label>
                <input type="text" class="form-control" placeholder= "" id ="options<%= count*4 +4%>" name="options<%= count*4 +4%>" value="<%= surveys.questions[count].options[3].details %>" required>
                <br>
              </div>
              <% } %>
              <br><br><br>
              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/surveys" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<%- include('../partials/footer.ejs'); %>
